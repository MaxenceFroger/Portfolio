{% extends 'base.html.twig' %}

{% block title %}Update{% endblock %}

{% block body %}
    <section class="section">
        <div class="container">
            <h1 class="title has-text-centered">Voici la collection mise à jour : </h1>

            {% if collection is not empty %}
                <div class="table-container">
                    <table class="table is-striped is-fullwidth is-hoverable">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Catégorie</th>
                            <th>Licence</th>
                        </tr>
                        </thead>
                        <tbody>
                        <tr>
                            <td>{{ collection.collectionId }}</td>
                            <td>{{ collection.collectionNom }}</td>
                            <td>{{ collection.collectionCategorie }}</td>
                            <td>{{ collection.collectionLicence }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="notification is-warning has-text-centered">
                    Aucune collection trouvée.
                </div>
            {% endif %}
            <a href="{{ path('list_collection') }}" class="button is-primary">Retour à la liste des collections</a>
        </div>
    </section>
{% endblock %}
